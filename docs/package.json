{
  "name": "docs",
  "private": true,
  "scripts": {
    "start": "relivestyle --single --port 5000 public",
    "update-importmap": "create-styleguide-importmap > public/importmap.js",
    "build": "rm -rf dist && npm run update-importmap && rollup -c node:@dependable/rollup-config",
    "public-docs": "npm run build && surge dist dependable-components.surge.sh"
  },
  "dependencies": {
    "@dependable/components": "*",
    "@dependable/icons": "*",
    "@dependable/state": "^0.20.0",
    "@dependable/styleguide": "*",
    "@dependable/view": "^0.19.0",
    "stylewars": "^2.3.0"
  },
  "devDependencies": {
    "relivestyle": "^1.0.0-11",
    "rollup": "^2.79.1"
  }
}
